/* miniprogram/pages/user/user.wxss */
.userinfo{
  display: flex;
  width: 750rpx;
  height: 200rpx;
  border-radius:2%;
  margin-bottom: 20rpx;
}
.userinfo-avatar{
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-color: rgba(91, 77, 73, 0.33);
}
.userinfo-nickname{
  
  margin-left: 50rpx; 
}
.login{
  display: flex;
  justify-content: center;
  align-items: center;
  width: calc(750rpx - 160rpx);
}
.my{
  background-color: white;
  display: flex;
  height: 150rpx;
  border-radius:2%;
  width: 100%;
  border: 1rpx rgba(0, 0, 0, 0.241) solid;
  margin-top: 2rpx;
  margin-left: 5rpx;
  margin-right: 5rpx;
}
.text{
  margin: auto;
  font-size: 40rpx;
}
.login_text{
  font-size: large;
}