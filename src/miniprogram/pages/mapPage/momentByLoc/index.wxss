.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 40rpx;
  box-sizing: border-box;
  background: #F0F4F3;
  color: #000;
}

.navigator-item cover-image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 60rpx;
  padding-left: 0%;
  top: 10rpx;
}

.moment-item-container {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 20rpx;
  margin-bottom: 60rpx;
}

.moment-item-container .question {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;

}

.moment-item-container .question .moment-text {
  width: 100%;
  min-height: 100rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 60rpx;
}
.moment-item-container .question img {
  width: 100%;
}

.moment-item-container .answer-body {
  display: flex;
  width: 100%;
  justify-content: space-between;
  align-items: center;
  font-size: 40rpx;
}